{
  "compilerOptions": {
    "module": "None",
    "target": "ESNext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": false,
    "noImplicitUseStrict": true,
    "ignoreDeprecations": "5.0",
    "esModuleInterop": false,
    "removeComments": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
